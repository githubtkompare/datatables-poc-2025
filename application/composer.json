{
    "name": "university/datatables-poc-2025",
    "description": "Software Product Tracking System with PHP, Twig, Bootstrap, and DataTables",
    "type": "project",
    "require": {
        "php": "^8.3",
        "twig/twig": "^3.7",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
