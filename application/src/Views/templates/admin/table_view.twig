{% extends "base.twig" %}

{% block content %}
<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Admin Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ table_display_name }}</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="alert alert-info" role="alert">
            <h5 class="alert-heading">
                <i class="fas fa-table me-2"></i>Table View: {{ table_display_name }}
            </h5>
            <p class="mb-0">Read-only view of table structure and data. Total records: <strong>{{ record_count }}</strong></p>
        </div>
    </div>
</div>

<!-- Table Structure -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-cogs me-2"></i>Table Structure
                </h5>
            </div>
            <div class="card-body">
                {% if table_structure %}
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead class="table-dark">
                                <tr>
                                    <th>Field</th>
                                    <th>Type</th>
                                    <th>Null</th>
                                    <th>Key</th>
                                    <th>Default</th>
                                    <th>Extra</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for column in table_structure %}
                                <tr>
                                    <td><code>{{ column.Field }}</code></td>
                                    <td><span class="badge bg-secondary">{{ column.Type }}</span></td>
                                    <td>
                                        {% if column.Null == 'YES' %}
                                            <span class="badge bg-warning">YES</span>
                                        {% else %}
                                            <span class="badge bg-success">NO</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if column.Key %}
                                            <span class="badge bg-primary">{{ column.Key }}</span>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if column.Default is not null %}
                                            <code>{{ column.Default }}</code>
                                        {% else %}
                                            <em class="text-muted">NULL</em>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if column.Extra %}
                                            <small class="text-info">{{ column.Extra }}</small>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Unable to retrieve table structure.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Table Data -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-database me-2"></i>Table Data
                </h5>
                <small class="text-muted">Showing first 100 records</small>
            </div>
            <div class="card-body">
                {% if table_data %}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-sm">
                            <thead class="table-dark">
                                <tr>
                                    {% for column in table_structure %}
                                        <th>{{ column.Field }}</th>
                                    {% endfor %}
                                </tr>
                            </thead>
                            <tbody>
                                {% for row in table_data %}
                                <tr>
                                    {% for column in table_structure %}
                                        <td>
                                            {% set value = row[column.Field] %}
                                            {% if value is null %}
                                                <em class="text-muted">NULL</em>
                                            {% elseif column.Type starts with 'timestamp' or column.Type starts with 'datetime' %}
                                                <small>{{ value }}</small>
                                            {% elseif column.Type starts with 'text' or column.Type starts with 'longtext' %}
                                                <div style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;">
                                                    {{ value|length > 50 ? value|slice(0, 50) ~ '...' : value }}
                                                </div>
                                            {% else %}
                                                {{ value }}
                                            {% endif %}
                                        </td>
                                    {% endfor %}
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    {% if record_count > 100 %}
                        <div class="alert alert-info mt-3" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> This table contains {{ record_count }} records, but only the first 100 are displayed for performance reasons.
                        </div>
                    {% endif %}
                {% else %}
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        No data found in this table or unable to retrieve table data.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <a href="/admin" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Admin Dashboard
        </a>
    </div>
</div>
{% endblock %}
