{% extends "base.twig" %}

{% block content %}
<div class="row mb-4">
    <div class="col-12">
        <div class="alert alert-info" role="alert">
            <h5 class="alert-heading">
                <i class="fas fa-info-circle me-2"></i>Administration Dashboard
            </h5>
            <p class="mb-0">Monitor system health, test database connectivity, and analyze performance metrics.</p>
        </div>
    </div>
</div>

<!-- Database Connection Status -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-database me-2"></i>Database Connection Status
                </h5>
                <button class="btn btn-outline-primary btn-sm" onclick="testConnection()">
                    <i class="fas fa-sync-alt me-1"></i>Test Connection
                </button>
            </div>
            <div class="card-body">
                {% if db_test.success %}
                    <div class="alert alert-success d-flex align-items-center" role="alert">
                        <i class="fas fa-check-circle me-3"></i>
                        <div>
                            <strong>Database Connection: Successful</strong><br>
                            <small>{{ db_test.message }}</small>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Connection Details:</h6>
                            <ul class="list-unstyled">
                                <li><strong>Host:</strong> {{ db_test.details.host }}</li>
                                <li><strong>Database:</strong> {{ db_test.details.database }}</li>
                                <li><strong>Username:</strong> {{ db_test.details.username }}</li>
                                <li><strong>MySQL Version:</strong> {{ db_test.details.mysql_version }}</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Performance:</h6>
                            <ul class="list-unstyled">
                                <li><strong>Response Time:</strong> {{ db_test.details.response_time }}</li>
                                <li><strong>Current Time:</strong> {{ db_test.details.current_time }}</li>
                                <li><strong>Status:</strong> <span class="badge bg-success">{{ db_test.details.connection_status }}</span></li>
                            </ul>
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="fas fa-exclamation-triangle me-3"></i>
                        <div>
                            <strong>Database Connection: Failed</strong><br>
                            <small>{{ db_test.message }}</small>
                        </div>
                    </div>
                    
                    {% if db_test.details %}
                        <div class="mt-3">
                            <h6>Connection Details:</h6>
                            <ul class="list-unstyled">
                                <li><strong>Host:</strong> {{ db_test.details.host }}</li>
                                <li><strong>Database:</strong> {{ db_test.details.database }}</li>
                                <li><strong>Username:</strong> {{ db_test.details.username }}</li>
                                {% if db_test.details.error %}
                                    <li><strong>Error:</strong> <code>{{ db_test.details.error }}</code></li>
                                {% endif %}
                            </ul>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Database Table Statistics -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-table me-2"></i>Database Table Statistics
                </h5>
            </div>
            <div class="card-body">
                {% if table_stats %}
                    <div class="row">
                        {% for table, count in table_stats %}
                            <div class="col-md-3 mb-3">
                                <div class="card h-100 border-left-primary">
                                    <div class="card-body py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-grow-1">
                                                <div class="small text-uppercase text-muted">{{ table|replace({'_': ' '})|title }}</div>
                                                <div class="h5 mb-0">{{ count }}</div>
                                            </div>
                                            <div class="flex-shrink-0">
                                                <i class="fas fa-table text-primary"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Unable to retrieve table statistics. Please check database connection.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Admin Tools -->
<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-database fa-3x text-primary mb-3"></i>
                <h5>Database Testing</h5>
                <p class="text-muted">Comprehensive database connectivity and integrity testing tools.</p>
                <a href="/admin/db-test" class="btn btn-primary">
                    <i class="fas fa-vial me-1"></i>Run Tests
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-chart-line fa-3x text-success mb-3"></i>
                <h5>Performance Testing</h5>
                <p class="text-muted">Monitor query performance and system resource utilization.</p>
                <a href="/admin/performance-test" class="btn btn-success">
                    <i class="fas fa-tachometer-alt me-1"></i>Check Performance
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-cogs fa-3x text-info mb-3"></i>
                <h5>System Information</h5>
                <p class="text-muted">View system configuration and environment details.</p>
                <button class="btn btn-info" onclick="showSystemInfo()">
                    <i class="fas fa-info-circle me-1"></i>View Info
                </button>
            </div>
        </div>
    </div>
</div>

<!-- System Information Modal -->
<div class="modal fade" id="systemInfoModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-info-circle me-2"></i>System Information
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Application Details</h6>
                        <ul class="list-unstyled">
                            <li><strong>Name:</strong> {{ app_name }}</li>
                            <li><strong>Version:</strong> {{ app_version }}</li>
                            <li><strong>Environment:</strong> <span id="app-env">Loading...</span></li>
                            <li><strong>Base URL:</strong> {{ base_url }}</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Server Information</h6>
                        <ul class="list-unstyled">
                            <li><strong>PHP Version:</strong> <span id="php-version">Loading...</span></li>
                            <li><strong>Server Software:</strong> <span id="server-software">Loading...</span></li>
                            <li><strong>Current Time:</strong> <span id="server-time">Loading...</span></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
function testConnection() {
    $.get('/admin/db-test/run?type=connection')
        .done(function(response) {
            location.reload();
        })
        .fail(function() {
            alert('Failed to test database connection');
        });
}

function showSystemInfo() {
    // Populate system information
    $('#app-env').text('{{ app_debug ? "Development" : "Production" }}');
    $('#php-version').text('{{ constant("PHP_VERSION") }}');
    $('#server-software').text('{{ server.SERVER_SOFTWARE|default("Unknown") }}');
    $('#server-time').text(new Date().toLocaleString());
    
    $('#systemInfoModal').modal('show');
}

$(document).ready(function() {
    // Auto-refresh database statistics every 30 seconds
    setInterval(function() {
        window.location.reload();
    }, 30000);
});
</script>
{% endblock %}
