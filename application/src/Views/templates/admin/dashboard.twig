{% extends "base.twig" %}

{% block content %}
<div class="row mb-4">
    <div class="col-12">
        <div class="alert alert-info" role="alert">
            <h5 class="alert-heading">
                <i class="fas fa-info-circle me-2"></i>Administration Dashboard
            </h5>
            <p class="mb-0">Monitor system statistics and manage application data.</p>
        </div>
    </div>
</div>

<!-- Database Table Statistics -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-table me-2"></i>Database Table Statistics
                </h5>
            </div>
            <div class="card-body">
                {% if table_stats %}
                    <div class="row">
                        {% for table, count in table_stats %}
                            <div class="col-md-3 mb-3">
                                <a href="/admin/table/{{ table }}" class="text-decoration-none">
                                    <div class="card h-100 border-left-primary table-stat-card">
                                        <div class="card-body py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="flex-grow-1">
                                                    <div class="small text-uppercase text-muted">{{ table|replace({'_': ' '})|title }}</div>
                                                    <div class="h5 mb-0">{{ count }}</div>
                                                </div>
                                                <div class="flex-shrink-0">
                                                    <i class="fas fa-table text-primary"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Unable to retrieve table statistics. Please check database connection.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Quick Navigation -->
<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                <h5>Manage Employees</h5>
                <p class="text-muted">View and manage employee records and their software assignments.</p>
                <a href="/employees" class="btn btn-primary">
                    <i class="fas fa-users me-1"></i>View Employees
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-laptop fa-3x text-success mb-3"></i>
                <h5>Manage Software</h5>
                <p class="text-muted">Administer software products and their assignments.</p>
                <a href="/software" class="btn btn-success">
                    <i class="fas fa-laptop me-1"></i>View Software
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-building fa-3x text-info mb-3"></i>
                <h5>Manage Units</h5>
                <p class="text-muted">Administer university units and organizational structure.</p>
                <a href="/units" class="btn btn-info">
                    <i class="fas fa-building me-1"></i>View Units
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
