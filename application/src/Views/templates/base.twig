<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} - {% endif %}{{ app_name }}</title>
    
    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/2.3.4/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/responsive/3.0.3/css/responsive.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/buttons/3.2.0/css/buttons.bootstrap5.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <style>
        .sidebar {
            min-height: calc(100vh - 76px);
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
        }
        
        .main-content {
            min-height: calc(100vh - 76px);
        }
        
        .navbar-brand {
            font-weight: bold;
            color: #0d6efd !important;
        }
        
        .nav-link.active {
            background-color: #0d6efd;
            color: #ffffff !important;
            border-radius: 0.375rem;
        }
        
        .nav-link.active:hover {
            background-color: #0b5ed7;
            color: #ffffff !important;
        }
        
        .nav-link:hover {
            background-color: #e9ecef;
            color: #0d6efd !important;
            border-radius: 0.375rem;
        }
        
        .card-stats {
            border-left: 4px solid #0d6efd;
        }
        
        .table-actions {
            white-space: nowrap;
        }
        
        .status-badge {
            font-size: 0.875em;
        }
        
        .loading-spinner {
            display: none;
        }
        
        .error-message {
            color: #dc3545;
        }
        
        /* Enhanced responsive table styles */
        @media (max-width: 768px) {
            .table-responsive {
                font-size: 0.875rem;
                border: none;
            }
            
            .table th,
            .table td {
                padding: 0.5rem 0.25rem;
                vertical-align: middle;
                white-space: nowrap;
            }
            
            .btn-group-sm .btn {
                padding: 0.125rem 0.25rem;
                font-size: 0.75rem;
            }
            
            /* Hide less important columns on small screens */
            .table .d-sm-none {
                display: none !important;
            }
            
            /* Improve responsive badge display */
            .badge {
                font-size: 0.65rem;
                margin: 0.1rem;
            }
            
            /* Better mobile table actions */
            .table-actions .btn {
                margin: 0.1rem;
            }
        }
        
        @media (max-width: 576px) {
            .table th,
            .table td {
                padding: 0.375rem 0.125rem;
                font-size: 0.75rem;
            }
            
            .table-actions {
                display: flex;
                flex-direction: column;
                gap: 0.25rem;
            }
            
            .table-actions .btn-group {
                flex-direction: column;
                width: 100%;
            }
            
            .table-actions .btn {
                width: 100%;
                margin: 0.125rem 0;
            }
        }
        
        /* DataTables responsive enhancements */
        .dtr-details {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 1rem;
            margin: 0.5rem 0;
        }
        
        .dtr-title {
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.25rem;
        }
        
        .dtr-data {
            padding-left: 1rem;
        }
        
        /* Responsive control button styling */
        table.dataTable.dtr-inline.collapsed > tbody > tr > td.control:before,
        table.dataTable.dtr-inline.collapsed > tbody > tr > th.control:before {
            background-color: #0d6efd;
            border: 2px solid white;
            border-radius: 50%;
            box-shadow: 0 0 3px #ccc;
            height: 16px;
            width: 16px;
        }
        
        table.dataTable.dtr-inline.collapsed > tbody > tr.parent > td.control:before,
        table.dataTable.dtr-inline.collapsed > tbody > tr.parent > th.control:before {
            background-color: #198754;
        }
        
        .success-message {
            color: #198754;
        }
        
        /* DataTables customizations */
        .dataTables_wrapper .dataTables_length select,
        .dataTables_wrapper .dataTables_filter input {
            padding: 0.375rem 0.75rem;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
        }
        
        .dataTables_wrapper .dataTables_info {
            padding-top: 1rem;
        }
        
        .dataTables_wrapper .dataTables_paginate {
            padding-top: 0.5rem;
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .sidebar {
                min-height: auto;
                position: static;
                width: 100%;
                border-right: none;
                border-bottom: 1px solid #dee2e6;
            }
            
            .main-content {
                padding: 1rem !important;
            }
            
            .container-fluid > .row {
                margin: 0;
            }
            
            /* Improve table container on mobile */
            .card {
                margin-bottom: 1rem;
            }
            
            .card-body {
                padding: 0.75rem;
            }
            
            /* Better DataTables mobile display */
            .dataTables_wrapper .dataTables_length,
            .dataTables_wrapper .dataTables_filter,
            .dataTables_wrapper .dataTables_info,
            .dataTables_wrapper .dataTables_paginate {
                text-align: center;
                margin: 0.5rem 0;
            }
            
            .dataTables_wrapper .dataTables_filter input {
                width: 100%;
                margin: 0.5rem 0;
            }
            
            /* Stack table controls vertically on mobile */
            .dt-buttons {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                gap: 0.25rem;
                margin: 0.5rem 0;
            }
            
            .dt-button {
                font-size: 0.75rem !important;
                padding: 0.25rem 0.5rem !important;
            }
        }
        
        @media (max-width: 576px) {
            /* Sidebar navigation stacked on very small screens */
            .sidebar .nav-pills .nav-link {
                text-align: center;
                padding: 0.75rem;
                margin-bottom: 0.25rem;
            }
            
            /* Page title and actions */
            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 1rem;
            }
            
            .btn-toolbar {
                justify-content: center;
            }
            
            /* Force horizontal scroll for very wide tables */
            .table-responsive {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }
            
            /* Improve DataTables controls on very small screens */
            .dataTables_wrapper .top {
                display: flex;
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .dataTables_wrapper .bottom {
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 0.5rem;
            }
        }
        
        /* Table stat card hover effects */
        .table-stat-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            cursor: pointer;
        }
        
        .table-stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }
        
        a:has(.table-stat-card):hover {
            text-decoration: none;
        }
    </style>
    
    {% block extra_css %}{% endblock %}
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-cogs me-2"></i>{{ app_name }}
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="authDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>
                            {% set current_auth = auth() %}
                            {% if current_auth.user_name %}
                                {{ current_auth.user_name }} 
                                {% if current_auth.is_admin %}
                                    <span class="badge bg-warning text-dark ms-1">Admin</span>
                                {% else %}
                                    <span class="badge bg-info ms-1">User</span>
                                {% endif %}
                            {% else %}
                                Guest
                            {% endif %}
                        </a>
                        <ul class="dropdown-menu">
                            {% if not current_auth.user_name %}
                                <li><a class="dropdown-item" href="javascript:void(0)" onclick="toggleAdmin()">
                                    <i class="fas fa-shield-alt me-2"></i>Enable Admin Mode
                                </a></li>
                            {% else %}
                                {% if current_auth.is_admin %}
                                    <li><a class="dropdown-item" href="/admin">
                                        <i class="fas fa-tools me-2"></i>Admin Panel
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="javascript:void(0)" onclick="toggleAdmin()">
                                        <i class="fas fa-user me-2"></i>Switch to User Mode
                                    </a></li>
                                {% else %}
                                    <li><a class="dropdown-item" href="javascript:void(0)" onclick="toggleAdmin()">
                                        <i class="fas fa-shield-alt me-2"></i>Switch to Admin Mode
                                    </a></li>
                                {% endif %}
                            {% endif %}
                        </ul>
                    </li>
                    <li class="nav-item">
                        <span class="navbar-text">
                            <small>v{{ app_version }}</small>
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 px-0 sidebar">
                <div class="p-3">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                            <a class="nav-link {{ page == 'dashboard' ? 'active' : '' }}" href="/">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ page == 'software' ? 'active' : '' }}" href="/software">
                                <i class="fas fa-laptop-code me-2"></i>Software
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ page == 'units' ? 'active' : '' }}" href="/units">
                                <i class="fas fa-building me-2"></i>University Units
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ page == 'employees' ? 'active' : '' }}" href="/employees">
                                <i class="fas fa-users me-2"></i>Employees
                            </a>
                        </li>
                        <hr class="my-3">
                        {% if auth().is_admin %}
                        <li class="nav-item">
                            <a class="nav-link {{ page == 'admin' ? 'active' : '' }}" href="/admin">
                                <i class="fas fa-cog me-2"></i>Administration
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 main-content">
                <div class="p-4">
                    {% if title %}
                        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                            <h1 class="h2">{{ title }}</h1>
                            {% block page_actions %}{% endblock %}
                        </div>
                    {% endif %}

                    <!-- Alert Messages -->
                    {% if success is defined and success %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>{{ success }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endif %}

                    {% if errors is defined and errors %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <ul class="mb-0">
                                {% for error in errors %}
                                    <li>{{ error }}</li>
                                {% endfor %}
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endif %}

                    <!-- Page Content -->
                    {% block content %}{% endblock %}
                </div>
            </main>
        </div>
    </div>

    <!-- Loading Spinner Modal -->
    <div class="modal fade" id="loadingModal" tabindex="-1">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">Processing request...</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/3.0.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/3.0.3/js/responsive.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.0/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.0/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.12/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.12/vfs_fonts.min.js"></script>

    <!-- Global JavaScript -->
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Auto-hide success messages after 5 seconds
            setTimeout(function() {
                $('.alert-success').fadeOut();
            }, 5000);

            // Global AJAX setup disabled to avoid conflicts with DataTables
            // Individual forms/actions should handle their own loading states
            /*
            $.ajaxSetup({
                beforeSend: function(xhr, settings) {
                    // Don't show loading modal for DataTables requests
                    var url = settings && settings.url ? settings.url : '';
                    if (!url.includes('/data')) {
                        $('#loadingModal').modal('show');
                    }
                },
                complete: function(xhr, textStatus) {
                    // Don't hide loading modal for DataTables requests
                    var url = xhr && xhr.responseURL ? xhr.responseURL : '';
                    if (!url.includes('/data')) {
                        $('#loadingModal').modal('hide');
                    }
                },
                error: function(xhr, status, error) {
                    console.error('AJAX Error:', error);
                    // Don't show alert for DataTables requests - let DataTables handle it
                    var url = xhr && xhr.responseURL ? xhr.responseURL : '';
                    if (!url.includes('/data')) {
                        alert('An error occurred: ' + error);
                    }
                }
            });
            */

            // URL parameter handler for success messages
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('success')) {
                const message = urlParams.get('success');
                const alertHtml = `
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                $('.main-content > .p-4').prepend(alertHtml);
                
                // Remove success parameter from URL without refreshing
                const url = new URL(window.location);
                url.searchParams.delete('success');
                window.history.replaceState({}, document.title, url);
            }
        });

        // Common delete function
        function confirmDelete(type, id, name, deleteUrl) {
            if (confirm(`Are you sure you want to delete this ${type}: "${name}"?`)) {
                // Show loading modal
                $('#loadingModal').modal('show');
                
                $.post(deleteUrl, { id: id })
                    .done(function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Error: ' + response.message);
                        }
                    })
                    .fail(function() {
                        alert('Failed to delete ' + type);
                    })
                    .always(function() {
                        // Hide loading modal
                        $('#loadingModal').modal('hide');
                    });
            }
        }
        
        // Admin toggle function
        function toggleAdmin() {
            $.post('/admin/toggle-admin')
                .done(function(response) {
                    if (response.success) {
                        // Show success message
                        const alertHtml = `
                            <div class="alert alert-info alert-dismissible fade show" role="alert">
                                <i class="fas fa-info-circle me-2"></i>${response.message}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        `;
                        $('.main-content > .p-4').prepend(alertHtml);
                        
                        // Reload page to update UI
                        setTimeout(function() {
                            location.reload();
                        }, 1500);
                    } else {
                        alert('Error: ' + response.message);
                    }
                })
                .fail(function() {
                    alert('Failed to toggle admin mode');
                });
        }
    </script>
    
    {% block extra_js %}{% endblock %}
</body>
</html>
