{% extends "base.twig" %}

{% block page_actions %}
    {% set current_auth = auth() %}
    <div class="btn-toolbar">
        <a href="/employees" class="btn btn-outline-secondary me-2">
            <i class="fas fa-arrow-left me-1"></i>Back to Employees
        </a>
        {% if current_auth.is_admin %}
            <a href="/employees/{{ employee.id }}/edit" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i>Edit Employee
            </a>
        {% endif %}
    </div>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user me-2"></i>Employee Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Name:</strong>
                    </div>
                    <div class="col-sm-9">
                        {{ employee.first_name }} {{ employee.last_name }}
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Email:</strong>
                    </div>
                    <div class="col-sm-9">
                        <a href="mailto:{{ employee.email }}" class="text-decoration-none">
                            {{ employee.email }}
                        </a>
                    </div>
                </div>
                
                {% if employee.phone %}
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Phone:</strong>
                    </div>
                    <div class="col-sm-9">
                        {{ employee.phone }}
                    </div>
                </div>
                {% endif %}
                
                {% if employee.university_unit_name %}
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>University Unit:</strong>
                    </div>
                    <div class="col-sm-9">
                        {{ employee.university_unit_name }}
                    </div>
                </div>
                {% endif %}
                
                {% if employee.job_title %}
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Job Title:</strong>
                    </div>
                    <div class="col-sm-9">
                        {{ employee.job_title }}
                    </div>
                </div>
                {% endif %}
                
                <div class="row mb-0">
                    <div class="col-sm-3">
                        <strong>Created:</strong>
                    </div>
                    <div class="col-sm-9">
                        {{ employee.created_at|date('F j, Y') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-laptop-code me-2"></i>Software Roles
                </h5>
            </div>
            <div class="card-body">
                {% if software_roles and software_roles|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Software</th>
                                    <th>Role</th>
                                    <th>Version</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for role in software_roles %}
                                <tr>
                                    <td>
                                        <a href="/software/{{ role.software_id }}" class="text-decoration-none">
                                            {{ role.software_name }}
                                        </a>
                                        {% if role.vendor_managed %}
                                            <small class="text-muted">({{ role.vendor_name }})</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if role.role_type == 'Business Owner' %}
                                            <span class="badge bg-primary">
                                                <i class="fas fa-briefcase me-1"></i>Business Owner
                                            </span>
                                        {% elseif role.role_type == 'Technical Owner' %}
                                            <span class="badge bg-success">
                                                <i class="fas fa-cog me-1"></i>Technical Owner
                                            </span>
                                        {% elseif role.role_type == 'Technical Manager' %}
                                            <span class="badge bg-info">
                                                <i class="fas fa-users-cog me-1"></i>Technical Manager
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <code>{{ role.version|default('N/A') }}</code>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-inbox fa-2x mb-3 d-block"></i>
                        <p class="mb-0">No software roles assigned</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% if _GET.success %}
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        {{ _GET.success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endif %}
{% endblock %}
